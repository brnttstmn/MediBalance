<Window x:Class="FrontEndUIRedux.BandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontEndUIRedux"
        mc:Ignorable="d"
        Title="BandWindow" Height="300" Width="300">
    <Grid>
        <Viewbox HorizontalAlignment="Left" Height="73" Margin="10,187,0,0" VerticalAlignment="Top" Width="274">
            <Button x:Name="BandConnect" Content="Connect" Width="75" Height="20" Click="BandConnect_Click"/>
        </Viewbox>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="172" Margin="10,10,0,0" VerticalAlignment="Top" Width="274">
            <TextBlock x:Name="ConnectionText" TextWrapping="Wrap" Text="{Binding Path=ConnectionText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

    </Grid>
</Window>
